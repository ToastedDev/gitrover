---
interface Props {
  name: string;
  handle: string;
  href: string;
  avatar: string;
}

const { name, handle, href, avatar } = Astro.props
---

<blockquote class="flex flex-col gap-3 bg-orange-900/50 rounded-lg p-4 mt-3 mb-4 border-l-2 border-orange-600 italic">
  <slot />
  <div class="flex items-center gap-2 not-italic">
    <img src={avatar} alt={`${name}'s Avatar`} width={50} height={50} class="rounded-full">
    <div class="mt-1">
      <p class="font-medium text-lg leading-none">{name}</p>
      <a {href} class="text-sm">{handle}</a>
    </div> 
  </div>
</blockquote>
