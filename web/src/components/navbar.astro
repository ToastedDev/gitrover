---
import GitHubIcon from "./github.astro";
import SidebarToggle from "./sidebar-toggle.astro";

interface Props {
  sticky?: true;
  isLanding?: true;
  class?: string;
}

const { pathname } = Astro.url;
const { sticky, class: className, isLanding } = Astro.props;
---

<header
  class:list={[
    "flex h-16 items-center justify-between bg-orange-950 px-4 py-3",
    sticky && "sticky top-0 z-40",
    className,
  ]}
>
  <nav class="flex items-center gap-2">
    <a href="/" class="hover:opacity-75">
      <img
        src="/logo.png"
        alt="GitRover Logo"
        width={42}
        height={42}
        class="rounded-full"
      />
    </a>
    <a
      href="/docs"
      class:list={[
        "rounded-md border border-transparent px-3 py-2 font-medium hover:!border-orange-700 hover:bg-orange-900/50 hover:text-orange-600",
        pathname.startsWith("/docs") &&
          "!border-orange-700/50 bg-orange-900/50",
      ]}
    >
      Docs
    </a>
  </nav>
  <div class="flex items-center gap-2">
    <GitHubIcon />
    {!isLanding && <SidebarToggle />}
  </div>
</header>
